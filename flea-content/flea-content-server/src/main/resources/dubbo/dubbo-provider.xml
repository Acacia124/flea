<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="${dubbo.application.name}" />
	<!-- 注册中心暴露服务地址 -->
	<dubbo:registry protocol="${dubbo.registry.protocol}"
		address="${dubbo.registry.address}" />

	<!-- 暴露服务 -->
	<dubbo:protocol name="${dubbo.protocol.name}" port="${dubbo.protocol.port}" />

	<dubbo:service interface="site.acacia.flea.content.service.ContentCategoryService"
		ref="contentCategoryServiceImpl" timeout="60000" />
	<dubbo:service interface="site.acacia.flea.content.service.ContentService"
		ref="contentServiceImpl" timeout="60000" />
	<dubbo:service interface="site.acacia.flea.content.service.LogContentService"
		ref="logContentServiceImpl" timeout="60000" />
</beans>
