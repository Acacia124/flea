page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/*搜索*/

.search {
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.search-bar {
  flex: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx;
  background: #f4f4f4;
}

.search-wrap {
  position: relative;
  flex: auto;
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
}

.search-wrap .icon-search {
  margin-right: 10rpx;
}

.search-wrap .search-input {
  flex: auto;
  font-size: 28rpx;
}

.search-cancel {
  padding: 0 20rpx;
  font-size: 28rpx;
}


/*历史记录*/

.history {
  font-size: 14px;
  margin-left: 4%;
  margin-top: 13px;
  margin-right: 4%;
  border-bottom: 0.5px solid rgb(168, 168, 168);
}

.top-history {
  margin-bottom: 8px;
}

.top-history image {
  float: right;
  width: 36rpx;
  height: 36rpx;
}

.history-body {
  font-size: 13px;
  color: rgb(155, 151, 151);
  margin-left: 4%;
  margin-top: 13px;
  margin-right: 4%;
  border-bottom: 0.5px dotted rgb(168, 168, 168);
}

.history-border {
  margin-bottom: 5px;
}
