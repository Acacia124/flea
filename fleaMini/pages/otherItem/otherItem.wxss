.hotSell {
  margin-top: 20rpx;
  position: absolute;
  width: 100%;
  min-height:850rpx;
  background-color: rgb(248, 244, 244);
}
 

.hotSell-info {
  border-radius: 5px;
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  position: relative;
  width: 350rpx;
  height: 500rpx;
  background-color: white;
}

.hotSell-info-list-photo {
  width: 100%;
  height: 100%;
}

.title {
  width: 100%;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price {
  float: left;
  width:45%;
  font-size: 35rpx;
  color: red;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address {
  float: right;
  width:55%;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
