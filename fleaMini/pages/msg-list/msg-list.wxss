page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: white;
}

.container {
  min-height: 100%;
  padding: 0;
}

.user {
  width: 95%;
  height: 125rpx;
  padding: 20rpx;
  border-bottom: 0.1rpx solid #d0d0d0;
}

.user .img {
  float: left;
  margin-right: 25rpx;
}

.name {
  float: left;
  font-size: 35rpx;
  font-weight: 600;
}

.time {
  float: right;
  font-size: 25rpx;
  margin-top: 6rpx;
  color: #8c8c8e;
  font-family: 黑体;
}

.msg {
  font-size: 29rpx;
  color: #8c8c8e;
  font-family: 微软雅黑;
}

.message {
  width: 100%;
  padding: 10rpx;
  height: 80rpx;
}

.message image {
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}

.geli {
  width: 100%;
  height: 2rpx;
  background-color: rgba(229, 228, 230, 0.514);
}
